{
	"name": "@furudean/svelte-persistent-store",
	"version": "0.8.0",
	"description": "Svelte store that saves and loads data from localStorage or sessionStorage",
	"keywords": [
		"svelte",
		"svelte-kit",
		"store",
		"localStorage",
		"sessionStorage"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/furudean/svelte-persistent-store.git"
	},
	"license": "MIT",
	"funding": "https://github.com/sponsors/furudean",
	"author": "Merilynn Bandy <merilynn@furudean.com> (https://www.furudean.com/)",
	"type": "module",
	"scripts": {
		"check": "svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-check --tsconfig ./jsconfig.json --watch",
		"format": "prettier --ignore-path .gitignore --write .",
		"lint": "prettier --ignore-path .gitignore --check .",
		"package": "svelte-package"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"files": [
		"dist"
	],
	"devDependencies": {
		"@sveltejs/package": "^2.3.0",
		"prettier": "^3.2.5",
		"svelte": "^4.2.12",
		"svelte-check": "^3.6.8",
		"typescript": "~5.4.3"
	},
	"peerDependencies": {
		"svelte": "^3 || ^4"
	}
}
