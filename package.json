{
	"name": "@furudean/svelte-persistent-store",
	"version": "0.8.0",
	"description": "Svelte store that saves and loads data from localStorage or sessionStorage",
	"keywords": [
		"svelte",
		"svelte-kit",
		"store",
		"localStorage",
		"sessionStorage"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/furudean/svelte-persistent-store.git"
	},
	"funding": "https://github.com/sponsors/furudean",
	"author": "Merilynn Bandy <merilynn@furudean.com> (https://www.furudean.com/)",
	"type": "module",
	"scripts": {
		"check": "svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-check --tsconfig ./jsconfig.json --watch",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
		"lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. .",
		"package": "svelte-kit package",
		"prepare": "svelte-kit sync"
	},
	"devDependencies": {
		"@sveltejs/kit": "^1.0.0-next.338",
		"prettier": "^2.5.1",
		"prettier-plugin-svelte": "^2.5.0",
		"svelte": "^3.48.0",
		"svelte-check": "^3.0.2",
		"svelte2tsx": "^0.5.10",
		"typescript": "~4.7.2"
	},
	"peerDependencies": {
		"svelte": "^3.48.0"
	}
}
